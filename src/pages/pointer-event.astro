---
import { css } from "$panda/css";
import { Heading } from "$park/heading";
import { PAGES, SITE } from "~/config";
import { Container } from "~/core-ui";
import {
  ClickEventChecker,
  DeviceDifferenceChart,
  PointerEventChecker,
} from "~/features/pointer-event";
import Layout from "~/layouts/Layout.astro";
---

<Layout title={SITE.toPageTitle(PAGES["pointer-event"].name)}>
  <Container>
    <Heading as="h1" size="xl" class={css({ marginBottom: "1rem" })}>
      {PAGES["pointer-event"].name}
    </Heading>

    <Heading as="h2" size="lg" class={css({ marginBottom: "1rem" })}>
      On "click"
    </Heading>
    <ClickEventChecker client:idle />

    <Heading as="h2" size="lg" class={css({ margin: "3rem 0 1rem" })}>
      On "pointermove"
    </Heading>
    <PointerEventChecker client:idle />

    <Heading as="h2" size="lg" class={css({ margin: "3rem 0 1rem" })}>
      Pointer / Mouse / Touch Event
    </Heading>
    <DeviceDifferenceChart client:idle />
  </Container>
</Layout>
